# Production Environment Variables Template
# Copy this file to .env and fill in the values

# Database
POSTGRES_USER=markethub
POSTGRES_PASSWORD=your-secure-password-here
AUTH_DATABASE_URL=postgresql://markethub:password@postgres:5432/markethub_auth
BOOKING_DATABASE_URL=postgresql://markethub:password@postgres:5432/markethub_booking
TASK_DATABASE_URL=mongodb://markethub:password@mongodb:27017/markethub_tasks

# Redis
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@redis:6379

# RabbitMQ
RABBITMQ_USER=markethub
RABBITMQ_PASSWORD=your-rabbitmq-password
RABBITMQ_URL=amqp://markethub:password@rabbitmq:5672/

# MongoDB
MONGO_USER=markethub
MONGO_PASSWORD=your-mongo-password

# JWT (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-64-character-secret-key-here-make-it-very-long-and-random-123456789

# Django
DJANGO_SECRET_KEY=your-django-secret-key

# OAuth2 - Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth2 - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# URLs
API_URL=https://api.your-domain.com
WS_URL=wss://api.your-domain.com
FRONTEND_URL=https://your-domain.com
