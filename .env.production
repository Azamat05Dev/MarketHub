# MarketHub Production Environment Variables
# Copy this file to .env and fill in real values

# ===================
# AUTH SERVICE (.env)
# ===================
NODE_ENV=production
PORT=3001

# Database (use managed PostgreSQL like Railway, Supabase, or DigitalOcean)
DATABASE_URL=postgresql://user:password@host:5432/markethub_auth

# JWT (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=CHANGE_THIS_TO_64_CHAR_RANDOM_STRING

# OAuth2 - Google (get from console.cloud.google.com)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-secret
GOOGLE_CALLBACK_URL=https://api.your-domain.com/auth/google/callback

# OAuth2 - GitHub (get from github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-secret
GITHUB_CALLBACK_URL=https://api.your-domain.com/auth/github/callback

# Frontend URL
FRONTEND_URL=https://your-domain.com

# ========================
# MARKET STREAM SERVICE
# ========================
PORT=3002
USE_REAL_API=true
REDIS_URL=redis://:password@redis-host:6379

# ========================
# BOOKING SERVICE
# ========================
PORT=3003
DATABASE_URL=postgresql://user:password@host:5432/markethub_booking
REDIS_URL=redis://:password@redis-host:6379

# ========================
# TASK SERVICE
# ========================
PORT=3004
SECRET_KEY=your-django-secret-key
DATABASE_URL=your-database-url
RABBITMQ_URL=amqp://user:password@rabbitmq-host:5672/

# ========================
# FRONTEND (.env.local)
# ========================
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_WS_URL=wss://api.your-domain.com
